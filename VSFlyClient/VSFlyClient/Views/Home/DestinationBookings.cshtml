@model IEnumerable<VSFlyClient.Models.Destination>

@{
    ViewData["Title"] = "DestinationBookings";
}

<h1>Destination List</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Destination
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DestinationName)
            </td>
            <td>
                @Html.ActionLink("View Booking Details", "DestinationBookingsDetails", new { destination = item.DestinationName })
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-action="Statistics">Back to Statistics</a>
</div>