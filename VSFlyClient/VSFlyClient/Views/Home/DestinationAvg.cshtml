@model IEnumerable<VSFlyClient.Models.DestinationAverageVM>

@{
    ViewData["Title"] = "DestinationAvg";
}

<h1>Destination Average Ticket Sales</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Destination
            </th>
            <th>
                Average Sales
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DestinationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AverageSales)
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-action="Statistics">Back to Statistics</a>
</div>